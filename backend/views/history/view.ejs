<!-- views/history/view.ejs -->
<%- include('partials/breadcrumb', { breadcrumbs: ['History', 'View History'] }) %>

<h1>History Details</h1>

<div class="card">
    <div class="card-header">
        <h3><%= history.action %></h3>
    </div>
    <div class="card-body">
        <p><strong>User:</strong> <%= history.user.first_name %> <%= history.user.last_name %></p>
        <p><strong>Status:</strong> <%= history.status.name %></p>
        <p><strong>Action Time:</strong> <%= history.action_time %></p>
        <p><strong>Created By:</strong> <%= history.created_by ? history.created_by.first_name + ' ' + history.created_by.last_name : 'N/A' %></p>
    </div>
    <div class="card-footer">
        <a href="/history" class="btn btn-secondary">Back to List</a>
    </div>
</div>
