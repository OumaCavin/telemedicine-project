<!-- views/user/_search.ejs -->
<%- include('partials/breadcrumb', { breadcrumbs: ['Users', 'Search'] }) %>

<form action="/users/search" method="GET" class="form-inline">
    <div class="form-group">
        <label for="username">Username</label>
        <input type="text" name="username" id="username" class="form-control" placeholder="Search by username" value="<%= query.username || '' %>">
    </div>
    
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" name="email" id="email" class="form-control" placeholder="Search by email" value="<%= query.email || '' %>">
    </div>
    
    <button type="submit" class="btn btn-info">Search</button>
</form>
