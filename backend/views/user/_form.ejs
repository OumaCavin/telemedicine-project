<!-- views/user/_form.ejs -->
<%- include('partials/breadcrumb', { breadcrumbs: ['Users', action === 'update' ? 'Edit User' : 'Create User'] }) %>

<form action="<%= actionUrl %>" method="POST">
    <div class="form-group">
        <label for="username">Username</label>
        <input type="text" name="username" id="username" class="form-control" value="<%= user.username || '' %>" required>
    </div>
    
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" name="email" id="email" class="form-control" value="<%= user.email || '' %>" required>
    </div>

    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" name="password" id="password" class="form-control" <%= action === 'update' ? '' : 'required' %> >
    </div>

    <div class="form-group">
        <label for="is_active">Active</label>
        <input type="checkbox" name="is_active" id="is_active" <%= user.is_active ? 'checked' : '' %> >
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">
            <%= action === 'update' ? 'Update' : 'Create' %> User
        </button>
    </div>
</form>
