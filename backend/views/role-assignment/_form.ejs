<!-- views/role-assignment/_form.ejs -->
<form action="<%= actionUrl %>" method="POST">
    <%- include('partials/alerts') %> <!-- For displaying alerts -->

    <div class="form-group">
        <label for="user_id">User</label>
        <select name="user_id" id="user_id" class="form-control" required>
            <option value="">Select a User</option>
            <% users.forEach(user => { %>
                <option value="<%= user.user_id %>" <%= user.user_id == roleAssignment.user_id ? 'selected' : '' %>><%= user.first_name %> <%= user.last_name %></option>
            <% }); %>
        </select>
    </div>

    <div class="form-group">
        <label for="role_id">Role</label>
        <select name="role_id" id="role_id" class="form-control" required>
            <option value="">Select a Role</option>
            <% roles.forEach(role => { %>
                <option value="<%= role.role_id %>" <%= role.role_id == roleAssignment.role_id ? 'selected' : '' %>><%= role.role_name %></option>
            <% }); %>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
