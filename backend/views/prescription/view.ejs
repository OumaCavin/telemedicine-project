<!-- views/prescription/view.ejs -->
<%- include('partials/breadcrumb', { breadcrumbs: ['Prescriptions', 'View Prescription'] }) %>

<h1>Prescription Details</h1>

<div class="card">
    <div class="card-header">
        <h3>Prescription for <%= prescription.patient.first_name %> <%= prescription.patient.last_name %> by Dr. <%= prescription.doctor.first_name %> <%= prescription.doctor.last_name %></h3>
    </div>
    <div class="card-body">
        <p><strong>Medication Name:</strong> <%= prescription.medication_name %></p>
        <p><strong>Dosage:</strong> <%= prescription.dosage %></p>
        <p><strong>Frequency:</strong> <%= prescription.frequency %></p>
        <p><strong>Dosage Instructions:</strong> <%= prescription.dosage_instructions %></p>
        <p><strong>Status:</strong> <%= prescription.status %></p>
        <p><strong>Prescribed Date:</strong> <%= prescription.prescribed_date %></p>
        <p><strong>Refill Date:</strong> <%= prescription.refill_date %></p>
    </div>
    <div class="card-footer">
        <a href="/prescriptions" class="btn btn-secondary">Back to List</a>
    </div>
</div>
