<!-- views/admin/index.ejs -->
<%- include('partials/breadcrumb', { breadcrumbs: ['Admins', 'List'] }) %>

<h1>Admins</h1>

<%- include('admin/_search', { query: query }) %>

<table id="adminsTable" class="table table-bordered mt-4">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Gender</th>
            <th>Phone Number</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% admins.forEach(admin => { %>
            <tr>
                <td><%= admin.first_name %></td>
                <td><%= admin.last_name %></td>
                <td><%= admin.gender %></td>
                <td><%= admin.phone_number %></td>
                <td><%= admin.created_at %></td>
                <td>
                    <a href="/admins/<%= admin.admin_id %>" class="btn btn-info btn-sm">View</a>
                    <a href="/admins/<%= admin.admin_id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                    <form action="/admins/<%= admin.admin_id %>" method="POST" style="display:inline;">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>

<!-- DataTables Scripts -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function() {
        $('#adminsTable').DataTable();
    });
</script>
