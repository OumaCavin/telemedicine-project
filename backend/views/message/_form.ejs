<!-- views/message/_form.ejs -->
<form action="<%= actionUrl %>" method="POST">
    <%- include('partials/alerts') %> <!-- For displaying alerts -->

    <div class="form-group">
        <label for="user_id">User</label>
        <select name="user_id" id="user_id" class="form-control">
            <% users.forEach(user => { %>
                <option value="<%= user.user_id %>" <%= user.user_id == message.user_id ? 'selected' : '' %> >
                    <%= user.first_name %> <%= user.last_name %>
                </option>
            <% }); %>
        </select>
    </div>

    <div class="form-group">
        <label for="content">Content</label>
        <textarea name="content" id="content" class="form-control" rows="4" required><%= message.content %></textarea>
    </div>

    <div class="form-group">
        <label for="priority">Priority</label>
        <select name="priority" id="priority" class="form-control">
            <option value="low" <%= message.priority == 'low' ? 'selected' : '' %>>Low</option>
            <option value="medium" <%= message.priority == 'medium' ? 'selected' : '' %>>Medium</option>
            <option value="high" <%= message.priority == 'high' ? 'selected' : '' %>>High</option>
        </select>
    </div>

    <div class="form-group">
        <label for="is_read">Read Status</label>
        <select name="is_read" id="is_read" class="form-control">
            <option value="false" <%= message.is_read == false ? 'selected' : '' %>>Unread</option>
            <option value="true" <%= message.is_read == true ? 'selected' : '' %>>Read</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
