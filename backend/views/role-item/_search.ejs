<!-- views/role-item/_search.ejs -->
<form action="/role-items" method="GET">
    <div class="form-group">
        <label for="role_id">Role</label>
        <select name="role_id" id="role_id" class="form-control">
            <option value="">Select a Role</option>
            <% roles.forEach(role => { %>
                <option value="<%= role.role_id %>" <%= role.role_id == searchFilters.role_id ? 'selected' : '' %>><%= role.role_name %></option>
            <% }); %>
        </select>
    </div>

    <div class="form-group">
        <label for="permission">Permission</label>
        <input type="text" name="permission" id="permission" class="form-control" value="<%= searchFilters.permission || '' %>">
    </div>

    <button type="submit" class="btn btn-primary">Search</button>
</form>
