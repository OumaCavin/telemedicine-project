<!-- views/role/view.ejs -->
<%- include('partials/breadcrumb', { breadcrumbs: ['Roles', 'View Role'] }) %>

<h1>Role Details</h1>

<div class="card">
    <div class="card-header">
        <h3><%= role.role_name %></h3>
    </div>
    <div class="card-body">
        <p><strong>Description:</strong> <%= role.description %></p>
        <p><strong>Created By:</strong> <%= role.created_by ? role.created_by.first_name + ' ' + role.created_by.last_name : 'N/A' %></p>
        <p><strong>Updated By:</strong> <%= role.updated_by ? role.updated_by.first_name + ' ' + role.updated_by.last_name : 'N/A' %></p>
    </div>
    <div class="card-footer">
        <a href="/roles" class="btn btn-secondary">Back to List</a>
    </div>
</div>
