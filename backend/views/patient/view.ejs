<!-- views/patient/view.ejs -->
<%- include('partials/breadcrumb', { breadcrumbs: ['Patients', 'View Patient'] }) %>

<h1>Patient Details</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title"><%= patient.first_name %> <%= patient.last_name %></h5>
        <p class="card-text"><strong>Gender:</strong> <%= patient.gender %></p>
        <p class="card-text"><strong>Phone Number:</strong> <%= patient.phone_number || 'N/A' %></p>
        <p class="card-text"><strong>Address:</strong> <%= patient.address || 'N/A' %></p>
        <p class="card-text"><strong>Created At:</strong> <%= patient.created_at %></p>
        <p class="card-text"><strong>Updated At:</strong> <%= patient.updated_at %></p>
    </div>
</div>
