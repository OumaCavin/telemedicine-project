<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Patients List</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <h1>Patients List</h1>
        <%- include('_search') %>
        <a href="/patients/create">Create New Patient</a>
    </header>
    <main>
        <table>
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Date of Birth</th>
                    <th>Gender</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% patients.forEach(function(patient) { %>
                    <tr>
                        <td><%= patient.first_name %></td>
                        <td><%= patient.last_name %></td>
                        <td><%= patient.date_of_birth.toISOString().split('T')[0] %></td>
                        <td><%= patient.gender %></td>
                        <td>
                            <a href="/patients/<%= patient.patient_id %>">View</a>
                            <a href="/patients/<%= patient.patient_id %>/edit">Edit</a>
                            <form action="/patients/<%= patient.patient_id %>?_method=DELETE" method="POST" style="display:inline;">
                                <button type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </main>
</body>
</html>
