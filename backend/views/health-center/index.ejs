<!-- views/health-center/index.ejs -->
<%- include('partials/breadcrumb', { breadcrumbs: ['Health Centers', 'All Health Centers'] }) %>

<h1>Health Centers</h1>

<%- include('health-center/_search', { searchFilters: searchFilters }) %>

<table id="healthCentersTable" class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Contact Info</th>
            <th>Type</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% healthCenters.forEach(center => { %>
            <tr>
                <td><%= center.name %></td>
                <td><%= center.location %></td>
                <td><%= center.contact_info %></td>
                <td><%= center.type %></td>
                <td><%= center.created_at %></td>
                <td>
                    <a href="/health-centers/<%= center.center_id %>" class="btn btn-info btn-sm">View</a>
                    <a href="/health-centers/<%= center.center_id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                    <form action="/health-centers/<%= center.center_id %>" method="POST" style="display:inline;">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        <% }); %>
    </tbody>
</table>

<!-- DataTables JS and CSS CDN -->
<script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css">
<script>
    $(document).ready(function() {
        $('#healthCentersTable').DataTable();
    });
</script>
